<div id="within_ember" class={{background_class}} style={{if speak_mode_needing_hammer_js 'touch-action: auto;' }}>
<header class={{header_class}}>
  <div id="inner_header">
  {{#if app_state.speak_mode}}
    <span id="speak">
      {{#triple-click-listener triple_click='meta_home_click'}}
        <button class={{if on_home "btn btn-default access dim" "btn btn-default access"}} id="home_button" {{action "home"}} style='position: relative;'>
          <span class="sr-only">{{t "Home" key="home"}}</span>
          <span class="glyphicon glyphicon-home button_icon"></span>
          {{#unless app_state.eval_mode}}
            {{#if stashes.temporary_root_board_state}}
              <span class="glyphicon glyphicon-lock" style="float: left; width: 0; height: 0; color: #aaa; margin-top: 15px; margin-left: -5px;" title={{t "Home or Board Lock Set" key='home_or_board_lock_set'}}></span>
            {{else if stashes.sticky_board}}
              <span class="glyphicon glyphicon-lock" style="float: left; width: 0; height: 0; color: #aaa; margin-top: 15px; margin-left: -5px;" title={{t "Board Lock Set" key='board_lock_set'}}></span>
            {{/if}}
          {{/unless}}
        </button>
      {{/triple-click-listener}}
      {{#if show_back}}
        <button class="btn btn-default access skinnier" id="back_button" {{action "back"}}>
          <span class="sr-only">{{t "Back" key="back"}}</span>
          <span class="glyphicon glyphicon-arrow-left button_icon"></span>
        </button>
      {{/if}}
      {{#unless app_state.eval_mode}}
        {{#if app_state.pairing}}
          <button class={{if app_state.pairing.user.online 'btn over pair access online' 'btn over pair access'}} {{action 'remote_modeling'}} id='reply_icon'>
            {{#if app_state.pairing.model}}
              <span class='glyphicon glyphicon-road'></span>
            {{else}}
              <span class='glyphicon glyphicon-search'></span>
            {{/if}}
            {{#if app_state.pairing.user}}
              <img src={{app_state.pairing.user.avatar_url_with_fallback}} />
            {{/if}}
          </button>
        {{else if app_state.reply_note}}
          <div class='label label-info over' id='reply_icon'><span class='glyphicon glyphicon-envelope'></span></div>
        {{else if app_state.inflection_shift}}
          <div class='label label-info over' id='reply_icon'><span class='glyphicon glyphicon-adjust'></span></div>
        {{else if app_state.insertion}}
          <div class='label label-info over' id='reply_icon'><span class='glyphicon glyphicon-console'></span></div>
        {{else if app_state.flipped}}
          <div class='label label-info over' id='reply_icon'><span class='glyphicon glyphicon-repeat'></span></div>
        {{else if app_state.followers.active}}
          <div class='label label-info over clear' id='reply_icon'>
            {{#each app_state.followers.active as |user|}}
              <img src={{user.avatar_url}} class='follower' />
            {{/each}}
          </div>
        {{else if app_state.clearable_history}}
          <div class='label label-warning over' id='reply_icon' style='width: 60px; margin-right: -65px; border-radius: 10px;'><span class='glyphicon glyphicon-remove'></span> {{app_state.clearable_history}}</div>
        {{else if app_state.shift}}
          <div class='label label-info over' id='reply_icon'><span class='glyphicon glyphicon-font'></span></div>
        {{/if}}
      {{/unless}}
      <a href='#' tabindex="0" id="button_list" class={{button_list_class}} {{ action "vocalize" on="select"}} data-placement="bottom" data-trigger="manual">
        {{#unless app_state.button_list}}
          {{#if app_state.embedded}}
            <div style='float: left; margin: 5px; opacity: 0.7;'>
              <img src={{if app_state.domain_settings.logo_url app_state.domain_settings.logo_url (path 'images/logo-big.png')}} alt="LingoLinq-AAC" style='width: 20px;'/>
              {{t "Powered by %app_name%" key='powered_by_app'}}
            </div>
          {{else if app_state.currentUser.preferences.blank_status}}
            <div id="blank_status" class='text-muted'>
              {{time app_state.current_time}}
              {{#if app_state.battery.level}}
                <div class="progress">
                  <div class={{app_state.battery.progress_class}} role="progressbar" aria-valuenow={{app_state.battery.level}} aria-valuemin="0" aria-valuemax="100" style={{app_state.battery.progress_style}}>
                    {{#if app_state.battery.charging}}
                      <span class="glyphicon glyphicon-flash"></span>
                    {{/if}}
                    <span class="sr-only">{{t "%{pct}% battery" key='percent_battery' pct=app_state.battery.level}} {{#if app_state.battery.charging}}{{t "charging" key='charging'}}{{/if}}</span>
                  </div>
                  {{#if app_state.battery.low}}
                    {{#unless app_state.battery.charging}}
                      <span class="glyphicon glyphicon-exclamation-sign" style="margin-top: 2px;"></span>
                    {{/unless}}
                  {{/if}}
                </div>
              {{/if}}
              {{#if show_board_intro}}
                <div {{action 'board_intro'}} class='extra-btn' style='position: absolute; top: 3px; bottom: 3px; border: 1px solid #ccc;  background: #eee; margin-top: 0; margin-bottom: 0; border-radius: 5px; padding: 5px 10px; max-height: 75px; cursor: pointer;'>
                  <img src={{path "images/learn.png"}} style='height: 100%; max-height: 50px;'/>
                  {{t "Intro" key='intro'}}
                </div>
              {{else if app_state.eye_gaze_state}}
                <div class="eye_status" title={{app_state.eye_gaze_state.status}}>
                  {{#if app_state.eye_gaze_state.active}}
                    <span class="glyphicon glyphicon-eye-open"></span>
                  {{else if app_state.eye_gaze_state.dormant}}
                    <span class="glyphicon glyphicon-eye-open" style='opacity: 0.4;'></span>
                  {{else}}
                    <span class="glyphicon glyphicon-eye-close text-muted"></span>
                  {{/if}}
                </div>
              {{/if}}
            </div>
          {{/if}}
        {{/unless}}
        {{#with app_state.button_list as |button_list|}}
          {{partial "button-list"}}
        {{/with}}
      </a>
      {{#unless app_state.button_list}}
        {{#if app_state.currentUser.preferences.blank_status}}
          {{#unless app_state.eval_mode}}
            <!-- TODO: these popups should be dwellable, but if opened via dwell they should auto-close after like ten seconds -->
            <button id='speak_mode_notification' class='btn btn-default' {{action 'speak_mode_notification'}}>
              {{#if stashes.board_level}}
                <span style='color: #ddd; font-size: 12px; position: absolute; top: 3px; text-align: right;'>L{{stashes.board_level}}</span>
              {{/if}}
              {{#if app_state.speak_mode_modeling_ideas.enabled}}
                <span class='notification' style='height: 100%; position: absolute; top: 5px; left: 0; right: 0; bottom: 5px; height: auto;'>
                  <img src={{path 'images/modeling_ideas.svg'}} style='height: 100%; width: 100%; opacity: 0.7;' class='fit_image'/>
                  {{#if app_state.speak_mode_modeling_ideas.word}}
                    <div style='position: absolute; left: 0; top: 3px; width: 100%; text-align: center;'>
                      <span style='border: 3px solid rgba(255, 255, 255, 0.7); border-radius: 3px;'>
                        <span style='background: rgba(255, 255, 255, 0.9);'>"{{app_state.speak_mode_modeling_ideas.word}}"</span>
                      </span>
                    </div>
                  {{/if}}
                </span>
              {{else if app_state.user_badge}}
                <span class='notification'>
                  {{#if app_state.user_badge.earned}}
                    {{badge-earned badge=app_state.user_badge inline=true}}
                  {{else}}
                    {{badge-progress badge=app_state.user_badge inline=true}}
                  {{/if}}
                </span>
              {{else if app_state.speak_mode_modeling_ideas.timeout}}
                <span class='notification' style='height: 100%; position: absolute; top: 5px; left: 0; right: 0; bottom: 5px; height: auto;'>
                  <img src={{path 'images/modeling_ideas.svg'}} style='height: 100%; width: 100%; opacity: 0.3;' class='fit_image'/>
                </span>
              {{/if}}
            </button>
          {{/unless}}
        {{/if}}
      {{/unless}}
      {{#unless app_state.eval_mode}}
        {{#unless app_state.currentUser.preferences.device.disable_speak_options}}
          <button class="btn btn-default pass_to_btn_list" {{action "speakOptions"}} id="speak_options">
            {{#if app_state.referenced_user.unread_alerts}}
              <span class='label label-danger' style='position: absolute; top: -5px; right: -5px; border-radius: 10px;'>{{app_state.referenced_user.unread_alerts}}</span>
            {{else if app_state.referenced_user.request_alert}}
              <span class='label label-danger' style='position: absolute; top: -5px; right: -5px; border-radius: 10px;'>*</span>
            {{/if}}
            <span class="sr-only">{{t "speak options" key='speak_options'}}</span><span class="glyphicon glyphicon-chevron-down"></span>
          </button>
        {{/unless}}
      {{/unless}}
      <button class="btn btn-default access skinnier" id="backspace_button" {{action "backspace"}}>
        <span class="sr-only">{{t "backspace" key='backspace_lower'}}</span>
        <img src={{path "images/delete.svg"}}/>
      </button>
      {{#triple-click-listener triple_click='toggle_modeling'}}
        <button class="btn btn-default access" id="clear_button" {{action "clear"}} style='position: relative;'>
          <span class="sr-only">{{t "clear" key='clear_lower'}}</span>
          <span class="glyphicon glyphicon-remove button_icon" style="margin: 5px -5px 0;"></span>
          {{#if app_state.modeling}}
            <div style="position: absolute; bottom: 2px; left: 2px;">
              <span class="glyphicon glyphicon-hand-up"></span>
            </div>
          {{/if}}
        </button>
      {{/triple-click-listener}}
    </span>
  {{else}}
    <span id="nav_header" class={{app_state.nav_header_class}}>
    {{#if app_state.currentUser}}
      {{#unless app_state.speak_mode}}
        {{#unless app_state.edit_mode}}
          {{#unless app_state.embedded}}
            <span style='float: right;' class='not_pretty_skinny'>
              <a href="#" {{action 'support'}} style='line-height: 70px; vertical-align: middle; margin-right: 15px; font-size: 30px; color: #aaa;'><span class='glyphicon glyphicon-question-sign'></span></a>
            </span>
          {{/unless}}
        {{/unless}}
      {{/unless}}
    {{/if}}
    {{#if app_state.currentUser.single_org.image_url}}
      {{#if app_state.index_view}}
        <img style="position: absolute; top: 50px; left: 19px; width: 50px; height: 50px; border-radius: 50px; object-fit: contain; object-position: center;" src={{app_state.currentUser.single_org.image_url}} onerror="this.style.display='none';">
      {{/if}}
    {{/if}}
    <h1 class={{app_state.h1_class}} style='position: relative; z-index: 1;'>

      <a href="#" {{action "index"}}>
        <img src={{if app_state.domain_settings.logo_url app_state.domain_settings.logo_url (path 'images/logo-big.png')}} alt="LingoLinq-AAC"/>
        <span>
          {{t "%app_name_upper%" key="app_name_upper"}}
        </span>
      </a>
    </h1>
    {{#if app_state.currentBoardState.id}}
      {{#unless app_state.edit_mode}}
        {{#if app_state.from_route}}
          <button id='board_done' class='btn btn-default' {{action 'back_to_from_route'}}>
            <span style='font-size: 30px; line-height: 14px; vertical-align: bottom; padding-right: 5px;'>&times;</span>
            <span style='font-size: 16px;'>{{t "Done" key='done'}}</span>
            <span style='font-size: 11px; display: block; padding-left: 27px; margin-top: -4px;'>{{t "with boards" key='with_boards'}}</span>
          </button>
        {{/if}}
        <span id="board_id">
          {{#if app_state.current_board_is_home}}
            <img src="https://opensymbols.s3.amazonaws.com/libraries/noun-project/Home-c167425c69.svg" style="height: 20px; width: 20px; vertical-align: bottom; margin-top: 10px;"/>
          {{else}}
            {{#if board.model.image_url}}
              <img src={{board.model.image_url}} style="width: 20px; height: 20px; vertical-align: bottom; margin-top: 10px;"/>
            {{else}}
              <span style="display: inline-block; height: 30px;"></span>
            {{/if}}
          {{/if}}
          {{#if app_state.current_board_in_board_set}}
            <span class="glyphicon glyphicon-align-justify" title={{t "in the user's board set" key='in_board_set'}}></span>
          {{else if app_state.current_board_in_extended_board_set}}
            <span class="glyphicon glyphicon-list" title={{t "in a supervisee's board set" key='in_supervisee_board_set'}}></span>
          {{/if}}

          {{#if app_state.currentBoardState.integration_name}}
            {{app_state.currentBoardState.integration_name}}
          {{else}}
            {{#if board.model.local_only}}
              {{app_state.current_board_user_name}} / 
            {{else}}
              {{#link-to 'user' app_state.current_board_user_name}}{{app_state.current_board_user_name}}{{/link-to}} /
            {{/if}}
            {{app_state.current_board_name}}
          {{/if}}
          {{#if stashes.board_level}}
            <span style='margin-left: 5px;'>L{{stashes.board_level}}</span>
          {{/if}}
        </span>
      {{/unless}}
    {{else if app_state.currentUser.single_org}}
      <div id='org_name'>{{app_state.currentUser.single_org.name}}</div>
    {{/if}}
    {{#if app_state.empty_header}}
      {{#if persistence.online}}
        {{#unless app_state.super_no_linky}}
          {{#if allow_search}}
            <form id="header_search">
              <div style="float: left; margin-right: 4px; width: 150px;">
              {{input type="text" value=searchString enter=(action "searchBoards") class="form-control" placeholder="Search Boards"}}
              </div>
              <button class="btn btn-default" {{action "searchBoards"}}>{{t "Go" key='go'}}</button>
              <div style="clear: left;"></div>
            </form>
          {{/if}}
        {{/unless}}
      {{/if}}
    {{/if}}
    {{#unless session.isAuthenticated}}
      {{#unless app_state.installed_app}}
        {{#unless app_state.embedded}}
          {{#unless app_state.currentBoardState}}
            {{#unless app_state.no_linky}}
              {{#if app_state.domain_settings.full_domain}}
                {{#unless app_state.currentUser}}
                  <div class='signup_links'>
                    {{#link-to 'register'}}<span style='color: #444;'>{{t "2-Month Trial" key='two_month_trial'}}</span>{{/link-to}}
                    <span style='color: #aaa; padding: 0 5px;'> | </span>
                    {{#link-to 'gift_purchase'}}<span style='color: #444;'>{{t "Gift Purchase" key='gift_purchase'}}</span>{{/link-to}}
                  </div>
                {{/unless}}
              {{/if}}
            {{/unless}}
          {{/unless}}
        {{/unless}}
      {{/unless}}
    {{/unless}}
    {{#if app_state.edit_mode}}
      {{#if dragMode}}
        <button class="btn btn-default drag_button" id="edit_clear_button" style="position: relative; width: 300px;">
          {{t "Clear Button" key="clear_button"}}
        </button>
        <button class="btn btn-default drag_button" id="edit_stash_button" style="position: relative; width: 300px;">
          {{t "Copy Button to Stash" key="copy_button_to_stash"}}
        </button>
      {{else if board.preview_levels}}
        <button class="btn btn-default drag_button" {{action 'shift_level' 'down'}} style="position: relative; width: 50px;">
          <span class='glyphicon glyphicon-chevron-left'></span>
        </button>
        <span style='font-size: 20px; margin: 0 10px; width: 90px; display: inline-block; text-align: center;'>
          {{t "Level" key='level'}} {{board.current_level}}
        </span>
        <button class="btn btn-default drag_button" {{action 'shift_level' 'up'}} style="position: relative; width: 50px;">
          <span class='glyphicon glyphicon-chevron-right'></span>
        </button>
        <button class="btn btn-info" {{action 'shift_level' 'done'}} style="position: relative; width: 100px;">
          {{t "Done" key='done'}}
        </button>
      {{else}}
        <button class={{no_paint_mode_class}} {{action "noPaint"}}><span class='wide'>{{t "&nbsp;&nbsp;Edit&nbsp;&nbsp;" key="edit_padded"}}</span><span class='skinny glyphicon glyphicon-hand-up'></span></button>
        <span class="dropdown" style="display: inline-block;">
          <button class={{paint_mode_class}} data-toggle="dropdown">
            <span class="wide">{{t "Paint" key="paint"}}</span><span class="skinny glyphicon glyphicon-tint"></span>
            {{#if board.paint_mode}}
              {{board.paintColor}}
            {{/if}}
          </button>
          <ul class="dropdown-menu" role="menu" aria-labelledby="dLabel" style={{swatch_style}}>
            {{#each swatches as |swatch|}}
              <li role="presentation">
                <a role="menuitem" href="#" tabindex="-1" {{action "paint" swatch.fill swatch.border swatch.types}} style="float: left; width: 140px; clear: right; padding-top: 3px; padding-bottom: 3px;">
                  <span class="swatch" style={{swatch.style}}></span>
                  <span style="width: 70px; overflow: hidden; text-overflow: ellipsis; display: inline-block; vertical-align: top;">{{swatch.color}}</span>
                  <span class="text-muted" style="margin-left: 22px; display: block; margin-top: -5px; font-size: 14px; vertical-align: top;">
                    {{swatch.hint}}&nbsp;
                  </span>
                </a>
              </li>
              {{#if swatch.right_edge}}
                <!-- defined in app_state.extra_colored_keys -->
                {{#each swatch.extras as |extra|}}
                  <li role="presentation">
                    <a role="menuitem" href="#" tabindex="-1" {{action "paint" extra.fill extra.border extra.types}} style="float: left; width: 60px; clear: right; padding-left: 10px; padding-right: 10px; padding-top: 3px; padding-bottom: 3px;">
                      <span class="swatch" style={{extra.style}}></span>
                      <span class="text-muted" style="display: block; margin-top: -5px; font-size: 14px; vertical-align: top; white-space: nowrap; overflow: hidden; width: 40px;">
                        {{extra.label}}&nbsp;
                      </span>
                    </a>
                  </li>
                {{/each}}
                <div style='clear: left;'></div>
              {{/if}}
            {{/each}}
            <li role="presentation">
              <a role="menuitem" href="#" tabindex="-1" {{action "paint" "hide"}} style="float: left; width: 140px; clear: both;"><span class="glyphicon glyphicon-minus-sign"></span> {{t "Hide" key="hide_upper"}}</a>
              <a role="menuitem" href="#" tabindex="-1" {{action "paint" "show"}} style="float: left; width: 140px; clear: right;"><span class="glyphicon glyphicon-ok-sign"></span> {{t "Un-Hide" key="unhide"}}</a>
              <span style="clear: left;"></span>
            </li>
            <!-- TODO: painting text-only or w/ image -->
            <li role="presentation" class="text-muted">
              <a role="menuitem" href="#" tabindex="-1" {{action "paint" "close"}} style="float: left; width: 140px; clear: both;"><span class="glyphicon glyphicon-remove-sign"></span> {{t "De-Link" key="de_link"}}</a>
              <a role="menuitem" href="#" tabindex="-1" {{action "paint" "open"}} style="float: left; width: 140px; clear: right;"><span class="glyphicon glyphicon-plus-sign"></span> {{t "Re-Link" key="re_link"}}</a>
              <span style="clear: left;"></span>
            </li>
            {{#if app_state.feature_flags.board_levels}}
              <li role="presentation">
                <a role="menuitem" href="#" tabindex="-1" {{action "paint" 'level'}}>
                  <span class="glyphicon glyphicon-signal"></span>
                  {{t "Level Modifications" key='level_modifications'}}
                </a>
              </li>
            {{/if}}
          </ul>
        </span>
        <span class="wide_placeholder" style="padding-right: 10px;"></span>
        <button class="btn btn-default wide" {{action "undoEdit"}} disabled={{board.noUndo}}><span class="wide">{{t "Undo" key="undo"}}</span><span class="skinny glyphicon glyphicon-backward"></span></button>
        <button class="btn btn-default wide" {{action "redoEdit"}} disabled={{board.noRedo}}><span class="wide">{{t "Redo" key="redo"}}</span><span class="skinny glyphicon glyphicon-forward"></span></button>
        <span class="dropdown" style="display: inline-block;">
          <button class="btn btn-default" data-toggle="dropdown"><span class="wide">{{t "Grid +/-" key="grid_plus_minus"}}</span><span class="skinny glyphicon glyphicon-th"></span></button>
          <ul class="dropdown-menu skinny_grid" role="menu" aria-labelledby="dLabel">
            <li role="presentation" id="grid_menuitem">
              <span style="display: block; width: 300px; height: 200px; position: relative;">
                <span style="position: absolute; top: 0px; left: 0; width: 100%; text-align: center;">
                  <span role="menuitem"><span class="glyphicon glyphicon-chevron-up"></span><span class="sr-only">{{t "Top Row "key='top_row'}}</span></span>
                  <a role="menuitem" tabindex="-1" href="#" {{action "modifyGrid" "add" "row" "top"}} class="btn btn-default"><span class="glyphicon glyphicon-plus"></span><span class="sr-only">{{t "Add Top Row" key='add_top_row'}}</span></a>
                  <a role="menuitem" tabindex="-1" href="#" {{action "modifyGrid" "remove" "row" "top"}} class="btn btn-default"><span class="glyphicon glyphicon-minus"></span><span class="sr-only">{{t "Remove Top Row" key='remove_top_row'}}</span></a>
                  <span role="menuitem"><span class="glyphicon glyphicon-chevron-up"></span></span>
                </span>
                <span style="position: absolute; top: 53px; width: 50%; right: 0; text-align: right; line-height: 45px;">
                  <a role="menuitem" tabindex="-1" href="#" {{action "modifyGrid" "add" "column" "right"}} class="btn btn-default"><span class="glyphicon glyphicon-plus"></span><span class="sr-only">{{t "Add Right Column" key='add_right_column'}}</span></a>
                  <span class="glyphicon glyphicon-chevron-right"></span><br/>
                  <a role="menuitem" tabindex="-1" href="#" {{action "modifyGrid" "remove" "column" "right"}} class="btn btn-default"><span class="glyphicon glyphicon-minus"></span><span class="sr-only">{{t "Remove Right Column" key='remove_right_column'}}</span></a>
                  <span class="glyphicon glyphicon-chevron-right"></span>
                </span>
                <span style="position: absolute; top: 53px; width: 50%; left: 0; text-align: left; line-height: 45px;">
                  <span class="glyphicon glyphicon-chevron-left"></span>
                  <a role="menuitem" tabindex="-1" href="#" {{action "modifyGrid" "add" "column" "left"}} class="btn btn-default"><span class="glyphicon glyphicon-plus"></span><span class="sr-only">{{t "Add Left Column" key='add_left_column'}}</span></a><br/>
                  <span class="glyphicon glyphicon-chevron-left"></span>
                  <a role="menuitem" tabindex="-1" href="#" {{action "modifyGrid" "remove" "column" "left"}} class="btn btn-default"><span class="glyphicon glyphicon-minus"></span><span class="sr-only">{{t "Remove Left Column" key='remove_left_column'}}</span></a>
                </span>
                <span style="position: absolute; top: 160px; left: 0; width: 100%; text-align: center;">
                  <span role="menuitem"><span class="glyphicon glyphicon-chevron-down"></span><span class="sr-only">{{t "Bottom Rowx" key='bottom_row'}}</span></span>
                  <a role="menuitem" tabindex="-1" href="#" {{action "modifyGrid" "add" "row" "bottom"}} class="btn btn-default"><span class="glyphicon glyphicon-plus"></span><span class="sr-only">{{t "Add Bottom Row" key='add_bottom_row'}}</span></a>
                  <a role="menuitem" tabindex="-1" href="#" {{action "modifyGrid" "remove" "row" "bottom"}} class="btn btn-default"><span class="glyphicon glyphicon-minus"></span><span class="sr-only">{{t "Remove Bottom Row" key='remove_bottom_row'}}</span></a>
                  <span role="menuitem"><span class="glyphicon glyphicon-chevron-down"></span></span>
                </span>
              </span>
            </li>
          </ul>
        </span>
