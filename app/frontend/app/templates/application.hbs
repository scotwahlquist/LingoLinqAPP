                <li role="presentation">
                  {{#link-to "index"}}{{t "Dashboard" key='dashboard'}}{{/link-to}}
                </li>
              {{/unless}}
            {{/if}}
          {{/unless}}
          {{#unless app_state.superProtectedSpeakMode}}
            {{#if app_state.speak_mode}}
              {{#if app_state.feature_flags.enable_all_buttons}}
                {{#unless app_state.currentUser.preferences.prevent_hide_buttons}}
                  {{#unless app_state.eval_mode}}
                    {{#if no_hidden_buttons}}
                      <li><a href="#" {{action 'toggle_all_buttons'}} style={{if session.isAuthenticated 'margin-top: -10px; font-size: 14px;' 'font-size: 14px;'}}>
                        <span class="glyphicon glyphicon-apple"></span>
                        {{t "No Hidden Buttons" key='no_hidden_buttons'}}
                      </a></li>
                    {{else}}
                      <li><a href="#" {{action 'toggle_all_buttons'}}>
                        <span class="glyphicon glyphicon-apple"></span>
                        {{#if stashes.all_buttons_enabled}}
                          {{t "Hide Hidden Buttons" key='hide_disabled_buttons'}}
                        {{else}}
                          {{t "Show Hidden Buttons" key='show_all_buttons'}}
                        {{/if}}
                      </a></li>
                    {{/if}}
                  {{/unless}}
                {{/unless}}
                {{#if app_state.feature_flags.focus_word_highlighting}}
                  {{#unless app_state.eval_mode}}
                    <li><a href="#" {{action 'toggle_focus'}}>
                      {{#if app_state.focus_words}}
                        {{t "Clear Focus Words" key='clear_focus_words'}}
                      {{else}}
                        {{t "Focus Words" key='focus_words'}}
                      {{/if}}
                    </a></li>
                  {{/unless}}
                {{/if}}
              {{/if}}
            {{/if}}
            {{#unless app_state.eval_mode}}
              {{#if app_state.sessionUser.supervisees}}
                {{#if app_state.speak_mode}}
                  {{#if app_state.currentUser.permissions.delete}}
                    <li><a href="#" {{action "switch_communicators"}}>{{t "Switch Communicators" key='switch_communicators'}}</a></li>
                  {{/if}}
                {{/if}}
              {{/if}}
              {{#if app_state.currentBoardState}}
                <li><a href="#" {{action "find_button"}}>{{t "Find a Button" key='find_a_button'}}</a></li>
              {{/if}}
            {{/unless}}
            {{#if session.isAuthenticated}}
              {{#if app_state.currentBoardState}}
                {{#if app_state.speak_mode}}
                  {{#if app_state.eval_mode}}
                    <li><a href="#" {{action "repeat_prompt"}}><span class='glyphicon glyphicon-volume-up'></span> {{t "Repeat Prompt" key='repeat_prompt'}}</a></li>
                    <li><a href="#" {{action "change_section" 'forward'}}><span class='glyphicon glyphicon-chevron-right'></span> {{t "Next Section" key='next_section'}}</a></li>
                    <li><a href="#" {{action "change_section" 'back'}}><span class='glyphicon glyphicon-chevron-left'></span> {{t "Previous Section" key='previous_section'}}</a></li>
                    <li><a href="#" {{action "jump_section"}}><span class='glyphicon glyphicon-th-list'></span> {{t "Jump To..." key='jump_to'}}</a></li>
                    <li><a href="#" {{action "assessment_settings"}}><span class='glyphicon glyphicon-cog'></span> {{t "Eval Settings" key='eval_settings'}}</a></li>
                  {{else}}
                    {{#if app_state.currentBoardState.translatable}}
                      <li><a href="#" {{action "switch_languages"}}>{{t "Switch Languages" key='switch_languages'}}</a></li>
                    {{/if}}
                    {{#if stashes.sticky_board}}
                      <li><a href="#" {{action "toggle_sticky_board"}}>{{t "Release Board Lock" key='release_board_lock'}}</a></li>
                    {{else}}
                      <li><a href="#" {{action "toggle_sticky_board"}}>{{t "Stay on this Board" key='stay_on_board'}}</a></li>
                    {{/if}}
                    {{#if stashes.temporary_root_board_state}}
                      <li><a href="#" {{action "toggle_home_lock"}}>{{t "Release Home Lock" key='release_home_lock'}}</a></li>
                    {{else}}
                      {{#unless app_state.current_board_is_speak_mode_home}}
                        <li><a href="#" {{action "toggle_home_lock"}}>{{t "Set As Temporary Home" key='temporary_home'}}</a></li>
                      {{/unless}}
                    {{/if}}
                    {{#if app_state.feature_flags.find_multiple_buttons}}
                      {{#if has_board_intro}}
                        <li><a href="#" {{action "board_intro"}}>{{t "Board Intro" key='board_intro'}}</a></li>
                      {{/if}}
                    {{/if}}
                    {{#if app_state.currentUser.preferences.logging}}
                      {{#if app_state.logging_paused}}
                        <li><a href="#" {{action "toggle_pause_logging"}}>
                          <span class="label label-primary" style='padding: 3px;'><span class='glyphicon glyphicon-play'></span></span>
                          {{t "Resume Logging" key='resume_logging'}}
                        </a></li>
                      {{else}}
                        <li><a href="#" {{action "toggle_pause_logging"}}>
                          <span class="" style='padding: 3px;'><span class='glyphicon glyphicon-briefcase'></span></span>
                          {{t "Pause Logging" key='pause_logging'}}
                        </a></li>
                      {{/if}}
                    {{else}}
                      <!-- TODO: option to log temporarily/conclude temp log -->
                    {{/if}}
                  {{/if}}
                {{/if}}
              {{/if}}
            {{/if}}
          {{/unless}}
          {{#unless app_state.limited_speak_mode_options}}
            {{#if session.isAuthenticated}}
              {{#unless app_state.speak_mode}}
                <li>{{#link-to "search" "any" "_"}}{{t "Find Board" key='find_board'}}{{/link-to}}</li>
                {{#if app_state.currentUser.permissions.delete}}
                  <li><a href="#" {{action "newBoard"}}>{{t "Create a New Board" key='create_a_new_board'}}</a></li>
                {{/if}}
              {{/unless}}
              {{#if app_state.currentUser.permissions.delete}}
                <li>{{#link-to 'user.preferences' app_state.currentUser.user_name}}{{t "Preferences" key='preferences'}}{{/link-to}}</li>
                <li>{{#link-to 'user.logs' app_state.currentUser.user_name (query-params type='note')}}
                  {{#if app_state.currentUser.unread_messages}}
                    <span class="label label-danger" style="border-radius: 5px;">{{app_state.currentUser.unread_messages}}</span>
                  {{/if}}
                  {{t "Messages" key='messages'}}
                {{/link-to}}</li>
              {{/if}}
              {{#if session.as_user_id}}
                <li><a href="#" {{action "stopMasquerading"}}>{{t "Stop Masquerading" key='stop_masquerading'}}</a></li>
              {{/if}}
              {{#unless app_state.speak_mode}}
                <li><a href="#" {{action "invalidateSession"}}>{{t "Sign Out" key='logout'}}</a></li>
              {{/unless}}
            {{else}}
              <li role="presentation">
                <a href="#" {{action "authenticateSession"}}>{{t "Sign In" key="login"}}</a>
              </li>
              {{#unless app_state.no_linky}}
                {{#if app_state.domain_settings.full_domain}}
                  <li role="presentation">
                    {{#link-to "register"}}{{t "Register" key="register"}}{{/link-to}}
                  </li>
                {{/if}}
              {{/unless}}
              {{#if app_state.feature_flags.emergency_boards}}              
                <li role="presentation">
                  {{#link-to 'offline_boards' class='critical_access'}}{{t "Basic Access" key='critical_access'}}{{/link-to}}
                </li>
              {{/if}}
            {{/if}}
          {{/unless}}
        </ul>
      </span>
    </span>
  </div>
</header>
<div id="content" class={{content_class}}>
  {{ outlet }}
</div>
{{#if app_state.sidebar_visible}}
  <div id="sidebar" class='noselect advanced_selection' style={{sidebar_style}}>
    {{#unless app_state.currentUser.preferences.quick_sidebar}}
      <span style="margin: 5px; text-align: right; white-space: nowrap;">
        {{#if app_state.currentUser}}
          <button class='btn btn-default' style="width: 50%;" {{action "stickSidebar"}}><span class="glyphicon glyphicon-pushpin"></span></button>
          <button class='btn btn-default' id='sidebar_close' style="width: calc(50% - 14px); padding-left: 0; padding-right: 0;">&times;</button>
        {{else}}
          <button id='sidebar_close' class='btn btn-default' style="width: 90%;">&times; {{t "Hide" key='hide_upper'}}</button>
        {{/if}}
      </span>
    {{/unless}}
    {{#each app_state.sidebar_boards as |board|}}
      {{#if board.alert}}
        <a href="#" {{action 'alert' 'sidebar'}} class='sidebar_item'>
          <span class="glyphicon glyphicon-bullhorn"></span>
          <img src={{board.image}} class='pic' alt=""/>
          {{board.name}}
        </a>
      {{else if board.special}}
        <a href="#" {{action 'special' board}} class='sidebar_item'>
          <span class="glyphicon glyphicon-flash"></span>
          <img src={{board.image}} class='pic' alt=""/>
          {{board.name}}
        </a>
      {{else}}
        <a href={{board.key}} class='sidebar_item' {{action 'jump' board.key 'sidebar' board}} data-key={{board.key}}>
          {{#if board.home_lock}}
            <span class="glyphicon glyphicon-home"></span>
          {{/if}}
          {{#if board.fenced}}
            <span class="glyphicon glyphicon-map-marker"></span>
          {{/if}}
          <img src={{board.image}} class='pic' alt=""/>
          {{board.name}}
        </a>
      {{/if}}
    {{/each}}
    {{#if app_state.currentUser.preferences.quick_sidebar}}
      {{#unless app_state.currentUser.preferences.lock_quick_sidebar}}
        <span style="margin: 5px; text-align: right;">
          <button class='btn btn-default' style="width: 90px; margin-bottom: 5px; " {{action "stickSidebar"}}>Hide</button>
        </span>
      {{/unless}}
    {{/if}}
  </div>
{{else}}
  {{#if app_state.speak_mode}}
    {{#unless app_state.currentUser.preferences.disable_quick_sidebar}}
      {{#unless app_state.sidebar_relegated}}
        {{#unless app_state.eval_mode}}
          <div id="sidebar_tease" class={{if app_state.skinny_sidebar "advanced_selection noselect skinny" "advanced_selection noselect"}}>
            {{#if app_state.fenced_sidebar_board}}
              <span class='glyphicon glyphicon-map-marker' style='font-size: 20px; vertical-align: middle;'></span>
            {{/if}}
            {{t "sidebar" key='sidebar'}}
          </div>
        {{/unless}}
      {{/unless}}
    {{/unless}}
  {{/if}}
{{/if}}

{{outlet 'modal'}}
{{outlet 'highlight'}}
{{outlet 'highlight-secondary'}}
{{outlet 'board-preview'}}
{{outlet 'flash-message'}}
{{#if setup_footer}}
  {{partial 'setup-footer'}}
{{else if footer}}
  {{partial 'footer'}}
{{/if}}
{{#unless app_state.testing}}
  {{#unless app_state.installed_app}}
    <iframe style="visibility: hidden; height: 0; position: absolute;" src="/cache"></iframe>
  {{/unless}}
{{/unless}}
</div>
